#!/bin/bash

alias g=/development/grit/Grit.py
alias grit=/development/grit/Grit.py

source /development/grit/for-your-bashrc.sh

# find
function e() {
  emacsclient -n `grit find $*`
}

alias LT=/development/rippled/bin/LT
alias sa="sudo apt-get -y"
alias sag="sudo apt-get install -y"
alias arc='/development/arcanist/bin/arc'
alias gl='git l'
alias gb='\gb r'

function rmpyc {
   find . -name \*.pyc | xargs rm
}

function rtags () {
    find src/ripple -name \*.h -or -name \*.cpp | xargs etags
}

function add_suffix() {
    for suffix
        do
            find . -name \*.$suffix -print0 | xargs -0 git add
    done
}

function maxcom () {
    add_suffix js maxpat maxhelp txt \
        && git commit -m "$1" \
        && git push
}

function maxcom_old () {
    find . -name \*.js -or -name \*.maxpat -or -name \*.maxhelp -or -name \*.txt \
        | xargs git add \
        && git commit -m "$1" \
        && git push
}

function bleen () {
    echo "$1"
}
