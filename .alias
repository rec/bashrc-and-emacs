#!/bin/bash

alias grit=/development/grit/Grit.py
alias e=emacsclient

function rtags () {
    find src/ripple -name \*.h -or -name \*.cpp | xargs etags
}

# next root
function + () {
  cd `grit + $*`
}

function ++ () {
  cd `grit + $*`
  cd `grit + $*`
}

# previous root
function - () {
  cd `grit - $*`
}

function -- () {
  cd `grit - $*`
  cd `grit - $*`
}

# top of root
function root () {
  cd `grit ^ $*`
}

# find
function f() {
  cd `grit f $*`
}

# open
function o() {
  grit o $*
}

function new() {
  grit new $*
}

# amend
function ga() {
  grit a $*
}

# amend push
function gap() {
  grit a p
}

# branches
function gb() {
  grit b $*
}

# clone
function gc() {
  grit c $*
}

# pushes
function gp() {
  grit p $*
}

# other cd commands.
function ..() {
  cd ..
}

function ...() {
  cd ../..
}

function ....() {
  cd ../../..
}
